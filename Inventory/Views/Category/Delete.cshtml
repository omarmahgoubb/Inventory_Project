@model Inventory_Entities.Category

@{
    ViewData["Title"] = "Delete Category";
    // Default image path
    var defaultImageSrc = Url.Content("~/No_Image_Available.jpg");
    // Use default image if none is available
    var imageSrc = string.IsNullOrEmpty(@Model.imageSrc) ? defaultImageSrc : @Model.imageSrc;
}

<div class="container mt-4">
    <h1 class="noHoverBox mb-4">@Model.categoryName</h1>

    <div class="row">
        <div class="col-md-6 text-center">
            <img src="@imageSrc" style="width: 100%; max-width: 500px;" class="img-thumbnail" alt="@Model.categoryName" />
        </div>
        <div class="col-md-6">
            <h3 class="mb-3" style="font-size: 2.2rem; text-decoration: underline;">Category Attributes:</h3>
            <ul style="font-size: 1.5rem;">
                <li><strong>Category Name:</strong> @(Model.categoryName ?? "No name available")</li>
                <br />
                <li><strong>Created By:</strong> @(Model.CreatedBy ?? "No creator information available")</li>
            </ul>
            <p style="font-size: 1.8rem; color: red; font-weight: bold;">Are you sure you want to delete this category?</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken() <!-- Include Anti-Forgery Token -->
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
