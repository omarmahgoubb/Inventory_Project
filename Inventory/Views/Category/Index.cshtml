@using Inventory_Entities
@model IEnumerable<Inventory_Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (TempData["successData"] != null)
    {
        <h3>@TempData["successData"]</h3>
    }

    <!-- Create New Category Button -->
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-dotted"></i> Create New Category
        </a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr class="table-primary">
                <th scope="col">Category Name</th>
                <th scope="col">Category Picture</th>
                
                    <th scope="col" class="text-center">Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center">No categories found.</td>
                </tr>
            }
            else
            {
                foreach (var category in Model)
                {
                    <tr>
                        <td scope="row">@category.categoryName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(category.imageSrc))
                            {
                                <img src="@category.imageSrc" style="width:48px" class="img-thumbnail" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        @if (User.IsInRole(RolesNames.roleAdmin))
                        {
                            <td class="text-center">
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> &nbsp Details
                                </a>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-success">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Cateory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                        }
                        else
                        {
                             <td class="text-center">
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> &nbsp Details
                                </a>
                                </td>
                        }


                    </tr>
                }
            }
        </tbody>
    </table>
</div>
