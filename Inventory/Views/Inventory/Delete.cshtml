@model Inventory_Entities.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <h4>Are you sure you want to delete this inventory?</h4>
    <div>
        <h5>Inventory Name: @Model.InventoryName</h5>
        <h5>Inventory ID: @Model.Id</h5> <!-- Updated to Id -->
        <h5>Inventory Address: @Model.Address</h5> <!-- Updated to Address -->
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Updated to Id -->
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
