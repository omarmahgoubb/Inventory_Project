@model Inventory_Entities.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<div class="container mt-4">
    <h1 class="noHoverBox mb-4">@Model.InventoryName</h1>

    <div class="row">
        <div class="col-md-12">
            <h3 class="mb-3" style="font-size: 2.2rem; text-decoration: underline;">Inventory Attributes:</h3>
            <ul style="font-size: 1.5rem;">
                <li><strong>Name:</strong> @(Model.InventoryName ?? "No name available")</li>
                <br />
                <li><strong>Address:</strong> @(Model.Address ?? "No address available")</li> <!-- Updated to Address -->
                <br />
                <li><strong>Created By:</strong> @(Model.CreatedBy ?? "No creator information available")</li>
            </ul>
            <p style="font-size: 1.8rem; color: red; font-weight: bold;">Are you sure you want to delete this inventory?</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken() <!-- Include Anti-Forgery Token -->
                <input type="hidden" asp-for="Id" /> <!-- Updated to Id -->
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
