@model Inventory_Entities.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <h5>Product Name: @Model.productName</h5>
        <h5>Product Price: @Model.productPrice.ToString("C")</h5>
        <h5>Product ID: @Model.Id</h5>
        <h5>Category: @Model.category.categoryName</h5>
        <h5>
            <img src="@Model.imageSrc" style="width:500px" class="img-thumbnail" />
        </h5>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
