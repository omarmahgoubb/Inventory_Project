@model Inventory_Entities.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-4">
    <h1 class="noHoverBox mb-4">@Model.SupplierName</h1>

    <div class="row">
        <div class="col-md-12">
            <h3 class="mb-3" style="font-size: 2.2rem; text-decoration: underline;">Supplier Attributes:</h3>
            <ul style="font-size: 1.5rem;">
                <li><strong>Name:</strong> @(Model.SupplierName ?? "No name available")</li>
                <br />
                <li><strong>Contact Number:</strong> @(Model.SupplierPhone ?? "No contact number available")</li>
                <br />
                <li><strong>Email:</strong> @(Model.SupplierEmail ?? "No email available")</li>
                <br />
                <li><strong>Address:</strong> @(Model.SupplierAddress ?? "No address available")</li>
                <br />
                <li><strong>City:</strong> @(Model.City ?? "No city information available")</li>
            </ul>
            <p style="font-size: 1.8rem; color: red; font-weight: bold;">Are you sure you want to delete this supplier?</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken() <!-- Include Anti-Forgery Token -->
                <input type="hidden" asp-for="Id" /> <!-- Hidden input for the Id -->
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
