@using Inventory_Entities
@{
    Layout = "_Layout"; // Use the new layout for the home page
}

<h1 class="text-center">Welcome to Inventory</h1>
<div class="row justify-content-center mt-4">
    <div class="col-md-4 box">
        <h3 class="text-center">Product Management</h3>
        <p class="text-center">Manage your products efficiently.</p>
        <div class="text-center">
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="color: aqua;">Go to Products</a>
        </div>
    </div>

    <div class="col-md-4 box">
        <h3 class="text-center">Category Management</h3>
        <p class="text-center">Manage your categories efficiently.</p>
        <div class="text-center">
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="color: aqua;">Go to Categories</a>
        </div>
    </div>

    <div class="col-md-4 box">
        <h3 class="text-center">Inventory Management</h3>
        <p class="text-center">Manage your inventories effectively.</p>
        <div class="text-center">
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-primary" style="color: aqua;">Go to Inventories</a>
        </div>
    </div>
     @if (User.IsInRole(RolesNames.roleAdmin))
